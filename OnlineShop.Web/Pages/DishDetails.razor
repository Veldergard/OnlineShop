@page "/DishDetails/{Id:int}"
@inherits DishDetailsBase

@if (Dish == null && ErrorMessage == null)
{
    <DisplaySpinner/>
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h3 class="mb-5">Сведения о блюде</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Dish.ImageURL">
        </div>
        <div class="col-md-6">
            <h3>@Dish.Name</h3>
            <p class="mb-4">@Dish.Description</p>
            <p class="mb-4">
                <b>
                    @Dish.Price.ToString("C")&nbsp;(@Dish.Amount гр.)
                </b>
            </p>
            <div>
                <button class="btn btn-success"
                        @onclick="() => AddToCart_Click(new CartItemToAddDto { CartId = TempClass.CartId, DishId = Dish.Id, Amount = 1 })">
                    <b>Добавить в корзину</b>
                </button>
            </div>
        </div>
    </div>
}